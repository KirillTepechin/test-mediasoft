<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="005-create-order-product-table" author="Kirill Tepechin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="order_product"/>
            </not>
        </preConditions>
        <createTable tableName="order_product">
            <column name="order_uuid" type="uuid">
                <constraints primaryKey="true" references="orders(uuid)" foreignKeyName="fk_op_order"/>
            </column>
            <column name="product_uuid" type="uuid">
                <constraints primaryKey="true" references="product(uuid)" foreignKeyName="fk_op_product"/>
            </column>
            <column name="quantity" type="NUMERIC(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="NUMERIC(10,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>